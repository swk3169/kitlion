<style type="text/css">
/* http://codepen.io/erikapdx/pen/BnfjH */
body {
  background: <%= settings.background_color %>;
  font-family: 'Lato', sans-serif;
  color: <%= settings.text_color %>;
  text-align: center;
}

form {
  max-width: 450px;
  margin: 17% auto;
}

.header {
  font-size: 35px;
  letter-spacing: 5px;
}

.header > p {
  margin-top:0px;
  margin-bottom:20px;
}

.description {
  font-size: 14px;
  letter-spacing: 1px;
  line-height: 1.3em;
  margin: -2px 0 35px;
}

input {
  -webkit-appearance: none;
  -webkit-border-radius:0px;
  box-sizing: border-box;
}

.input {
  display: inline;
  align-items: center;
}

.button {
  height: 50px;
  border: none;
}

#email {
  width: 80%;
  background: <%= settings.email_background_color %>;
  font-family: inherit;
  font-size: 1em;
  color: <%= settings.email_text_color %>;
  letter-spacing: 1px;
  text-indent: 5%;
  border-radius: 5px 5px 5px 5px;
  margin-bottom: 10px;
}

#submit {
  width: 80%;
  background: <%= settings.button_color %>;
  font-family: inherit;
  font-weight: bold;
  font-size: 1em;
  color: <%= settings.button_text_color %>;
  letter-spacing: 1px;
  border-radius: 5px 5px 5px 5px;
  cursor: pointer;
  transition: background .3s ease-in-out;
}

#submit:hover {
  background: <%= settings.button_hover_color %>;
}
  
#email:focus {
  background-color: #f3eade;
  outline: none;
  transition: background .3s ease-in-out;
}
</style>

<form action="/invite" method="post" name="form for slack invitation request">
  <%= Rack::Csrf.tag(env) %>
  <div class="header">
     <p>Join to <br/><%= settings.team_name %></p>
  </div>
  <div class="description">
    <p><%= settings.team_desc %></p>
  </div>
  <div class="input">
    <input type="email" class="button" id="email" name="email" placeholder="NAME@EXAMPLE.COM">
    <input type="submit" class="button" id="submit" value="JOIN">
  </div>
</form>
